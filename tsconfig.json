{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "outDir": "./build",
        "baseUrl": "./src",
        "strictNullChecks": true
    },
    "include": [
        "src/**/*",
        "test"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}